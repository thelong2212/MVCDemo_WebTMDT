
@model WebSiteBanHangMVC.Models.CTSanPham
@{
    ViewBag.Title = "Tạo mới chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var sanPhamID = ViewBag.ID;
}
@section header{
    Thêm mới chi tiết sản phẩm
}
<style>
    input, select {
        width: 70%;
    }
</style>
<div class="form-horizontal">
    <div>
        <div>
            <h3>
                Nhập thông tin chi tiết sản phẩm.
            </h3>
            <div>
                <div>
                    <div>
                        @using (Html.BeginForm("CreateDetailsProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Mã sản phẩm</label>
                                </div>
                                <div class="col-md-5">
                                    <input value="@sanPhamID" name="sanPhamID" type="text" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = " col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.SoLuong, new { required = true, type = "number", htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ChiTiet, htmlAttributes: new { @class = " col-md-3" })
                                <div class="col-md-5">

                                    @Html.TextBoxFor(model => model.ChiTiet, new { required = true, htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ChiTiet, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.GiamGia, htmlAttributes: new { @class = " col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.GiamGia, new { required = true, type = "number", htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = " col-md-3" })
                                <div class="col-md-5">

                                    @Html.TextBoxFor(model => model.GhiChu, new {  htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.AnhSanPham, new { @class = "col-md-3" })
                                <div class="col-md-5">
                                    <input required="" type="file" title="search image" id="file" name="file" onchange="show(this)" />
                                    <br>
                                    <img id="user_img" width="90" style="border:solid;width: 70%;display: block;" src="" height="200" alt="Ảnh sản phẩm...">
                                    @Html.ValidationMessageFor(model => model.AnhSanPham, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10" style="text-align: center;">
                                    <input style="width:10%;" type="submit" value="Tạo mới" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
</script>
<div>
    @Html.ActionLink("Quay lại trang trước", "Index")
</div>
