@model PagedList.IPagedList<WebSiteBanHangMVC.Models.KhachHang>
@using PagedList.Mvc;
@{ ViewBag.Title = "Quản lý danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

@section header{
    Danh sách khách hàng
}

@section jsFooter{
    <script src="~/assets/admin/js/controller/khachHangController.js"></script>
}
<style>
    .pagination-container {
        text-align: center;
    }

    .table-bordered > thead > tr > td, .table-bordered > thead > tr > th {
        color: blue;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="color: #337ab7;">
                Danh sách khách hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
                {
    <div class="row form-group">
        <div class="col-lg-12">
            <div class="col-md-4" style="padding-left: 0px;">
                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                <a class="btn btn-primary" href="/Admin/KhachHang/Create">Thêm mới</a>
            </div>
        </div>
    </div>}
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Ngày sinh</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Thao tác</th>   
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.KhachHangID">
                                    <td>@item.HoTen</td>
                                    <td>@(item.NgaySinh != null ? ((DateTime)item.NgaySinh).ToString("dd/MM/yyyy") : "")</td>
                                    <td>@item.Email</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.GhiChu</td>
                                    <td>@item.DiaChi</td>
                                    <td>
                                        <a href="/Admin/KhachHang/Edit/@item.KhachHangID">Cập nhật</a>
                                        <a href="#">/</a>
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.KhachHangID }, new AjaxOptions
                                        {
                                            Confirm = "Bạn có muốn xoá bản ghi này?",
                                            OnComplete = "$('#row_" + @item.KhachHangID + "').remove()",
                                            HttpMethod = "Delete"
                                        })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Keyword = @ViewBag.Keyword }))

                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>