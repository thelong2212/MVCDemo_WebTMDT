                    <td style="text-align: center;">@item.GiaTriDonHang</td>
                    <td style="text-align: center;">@item.KhachHang.HoTen</td>
                    <td style="text-align: center;">@(item.NgayNhan != null ? ((DateTime)item.NgayNhan).ToString("dd/MM/yyyy") : "")</td>
