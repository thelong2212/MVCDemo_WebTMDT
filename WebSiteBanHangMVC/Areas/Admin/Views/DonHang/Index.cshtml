                if (ViewBag.DenNgayNhan != null)
                {
                    ViewBag.DenNgayNhan = ((DateTime)ViewBag.DenNgayNhan).ToString("yyyy-MM-dd");
                }
                if (ViewBag.TuNgayXuat != null)
                {
                    ViewBag.TuNgayXuat = ((DateTime)ViewBag.TuNgayXuat).ToString("yyyy-MM-dd");
